<% @banners.each do |pic| %>
  <tr>
    <td><%= pic.link_url %></td>
    <td><%= pic.position %></td>
    <td><%= link_to 'Show', url_for(pic) %></td>
    <td><%= link_to 'Edit', edit_banner_path(pic) %></td>
    <td><%= link_to 'Destroy', url_for(pic), :method => :delete, :confirm => "Are you sure ?" %></td>
  </tr>
<% end %>
</table>

