<%= link_to 'Задать вопрос.', '#', onclick: "create_question();", class: "flrght" %>
<h1 class="colored_grey">Вопросы и ответы</h1>

<div class="panel-group" id="accordion">
  <%- @answers.each do |answer| %>
    <div class="panel panel-default with_border">
      <div class="panel-heading with_style">
        <a data-toggle="collapse" data-parent="#accordion" href="#<%=answer.question.id%>">
          <h4 class="panel-title">
            <b><%="№#{answer.question.id}: \"#{answer.question.title}\"" %></b>
          </h4>
        </a>
      </div>
      <div id="<%=answer.question.id%>" class="panel-collapse collapse top-bordered">
        <div class="panel-body">
          <%= answer.question.content %>
        </div>
      </div>
    </div>
  <%- end %>
</div>

