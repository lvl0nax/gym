<%= simple_form_for(@topimage) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :alt, label: 'Текст описывающий картинку' %>
    <%= f.input :slogan, label: 'Главный слоган сайта' %>
    <%= f.input :header, label: 'Верхний баннер' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
