<%= simple_form_for(@instructor) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :photo %>
    <%= f.input :description, as: :ckeditor, label: false, input_html: {toolbar: 'Full'} %>
    <%= f.association :filial %>
    <%= f.input :meta_title %>
    <%= f.input :meta_desc %>
    <%= f.input :meta_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
