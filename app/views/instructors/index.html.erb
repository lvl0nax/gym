<h1>Инструкторы</h1>

<% @instructors.each do |a| %>
  <div class="specoffer">  
    <div class="so_img"> <%= image_tag a.photo.thumb.url unless a.photo.blank?%> </div>
    <div class="so_content" >
      <h2 class="red-title"> <%=  a.name %> </h2>
      <h2 class="red1-title">Филиал: <%= link_to a.filial.title, a.filial %> </h2>
      <div class="body<%= a.id %>"><%= raw a.description.truncate(500) %></div>
    </div>
    <div class="for_clear"></div>
    <div class="more<%= a.id %> mc" data-id="<%= a.id %>" onclick="showinst(<%= a.id %>);">ПОДРОБНЕЕ</div>
    <div class="close<%= a.id %> mc" data-id="<%= a.id %>" onclick="closeinst(<%= a.id %>);" style="display: none;">СКРЫТЬ</div>
    <div class="nplinks">
      <% if current_user.try(:isAdmin?)   %>
        <%= link_to 'Подробнее', a %>
        <%= link_to 'Редактировать', edit_instructor_path(a) %>
        <%= link_to 'Удалить', a, confirm: 'Вы уверены?', method: :delete %>
      <% end %>
    </div>
  </div>
<% end %>
