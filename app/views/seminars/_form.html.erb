<%= simple_form_for(@seminar) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :shortc %>
    <%= f.input :content, :as => :ckeditor, :label => false, :input_html => { :toolbar => 'Full' }  %>
    <%= f.input :semtype, :hint => '1 - для начинающих / 2 - для продвинутых' %>
    <%= f.input :meta_title %>
    <%= f.input :meta_desc %>
    <%= f.input :meta_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
