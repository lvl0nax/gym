<%= simple_form_for(@review) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, label: "Представтесь, пожалуйста: " %>
    <%= f.input :body, label: "Отзыв: " %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Сохранить" %>
  </div>
<% end %>
