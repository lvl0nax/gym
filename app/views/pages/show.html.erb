<p id="notice"><%= notice %></p>

<div class="title">
  <h1> <%= @page.title %> </h1>
</div>

<div class="descr">
  <%= raw @page.content %>
</div>
<div class="for_clear"></div>
<% if current_user.try(:isAdmin?)   %>
  <p>
    <b>Meta title:</b>
    <%= @page.meta_title %>
  </p>

  <p>
    <b>Meta desc:</b>
    <%= @page.meta_desc %>
  </p>

  <p>
    <b>Meta key:</b>
    <%= @page.meta_key %>
  </p>


  <%= link_to 'Edit', edit_page_path(@page) %> |
  <%= link_to 'Back', pages_path %>

<% end %>

<% if @articles %>
  <% @articles.each do |a| %>
    <div class="specoffer">
      <div class="so_img"> <%= image_tag a.photo.small_thumb.url unless (a.photo.blank? && a.photo.small_thumb.blank?)%> </div>
      <div class="so_content" >
        <h2 class="red-title"> <%=  a.name %> </h2>
        <div class="body<%= a.id %>"><%= raw a.description.truncate(500) %></div>
      </div>
      <div class="for_clear"></div>
      <div class="more<%= a.id %> mc" data-id="<%= a.id %>" onclick="showart(<%= a.id %>);">ПОДРОБНЕЕ</div>
      <div class="close<%= a.id %> mc" data-id="<%= a.id %>" onclick="closeart(<%= a.id %>);" style="display: none;">СКРЫТЬ</div>
      <div class="nplinks">
        <% if current_user.try(:isAdmin?)   %>
          <%= link_to 'Подробнее', a %>
          <%= link_to 'Редактировать', edit_article_path(a) %>
          <%= link_to 'Удалить', a, confirm: 'Вы уверены?', method: :delete %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>
