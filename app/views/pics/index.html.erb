<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Alt</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |pic| %>
  <tr>
    <td><%= pic.alt %></td>
    <td><%= pic.description %></td>
    <td><%= link_to 'Show', url_for([@album, pic]) %></td>
    <td><%= link_to 'Edit', edit_album_pic_path(@album, pic) %></td>
    <td><%= link_to 'Destroy', url_for([@album, pic]), :method => :delete, :confirm => "Are you sure ?" %></td>
  </tr>
<% end %>
</table>

