<!DOCTYPE html>
<html>
<head>
  <meta charset='utf-8'>
  
  <title><%= seotitle%></title>
  <meta name="description" content="<%= seodescription %>" />
  <meta name="keywords" content="<%= seokeywords%>" />

  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>

  <script type='text/javascript' charset='UTF-8'>
    $(document).ready(function(){  
      $('form[data-remote]').bind("ajax:before", function(){
        for (instance in CKEDITOR.instances){
          CKEDITOR.instances[instance].updateElement();
        }
      });
    });
  </script>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="container">
    <div class="content-top">
      <div class="logo">
        <%= image_tag "/assets/logo_text.jpg" %>
        <%= image_tag "/assets/logo2.jpg" %>
      </div>
      
      <div class="login-links">
        <% if current_user %>
          <span><%= link_to current_user.email, edit_user_registration_path %></span> </br>
          <%= link_to "Выйти", destroy_user_session_path, :method => :delete %>
        <%else %>
          <%= link_to "Войти", new_user_session_path %> </br>
          <%= link_to "Регистрация", new_user_registration_path %>
        <% end %>
      </div>
      
    </div>

    <div class="top-image">
      <%= image_tag "faceline.jpg" %>
    </div>
    <div id="content-body">
      <% if current_user.try(:isAdmin?)   %>
        <div class="admin-links">
          Создать:  
          <%= link_to "Страницу", new_page_path %>|
          <%= link_to "Новость", new_newspage_path %>|
          <%= link_to "Филиал", new_filial_path %> |
          <%= link_to "Программу", new_seminar_path %> |
          <%= link_to "Текст", txtinfos_path %> |
          <%= link_to "Статью", new_article_path %> |
          <%= link_to "Инструктора", new_instructor_path %> |
          <%= link_to "Галерею", new_seminar_path %> 
        </div>
      <% end %>
      
      <div id="new-menu">
        <ul id="menu">
          <li> <%= link_to "Информация", "#" %> 
            <ul>
              <% @pages.each do |p|%>
                <li>
                  <%= link_to p do %>
                    <%= p.title %>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </li>

          <li> <%= link_to "Новости", newspages_path %></li>
          <li> <%= link_to "Программы", seminars_path %></li>
          <li> <%= link_to "Филиалы", filials_path %></li>
          <li> <%= link_to "Инструкторы", instructors_path %></li>
          <% if current_user.try(:isAdmin?)   %>
            <li> <%= link_to "Галерея", pictures_path %></li>
          <% end %>
          <li> <%= link_to "Контакты", @contacts %></li>
        </ul>
      </div>
      
      <%= yield %>
    </div>

    <div id="content-footer">
      <div class="bottom-menu">
        <% @pages.each do |p|%>
          <%= link_to p do %>
              <%= p.title %>
          <% end %>
        <% end %>
        <%= link_to  newspages_path do %>
            Новости
        <% end %>
        <%= link_to seminars_path do %>
            Семинары
        <% end %>
        <% if current_user.try(:isAdmin?)   %>
          <%= link_to filials_path do %>
              Филиалы
          <% end %>
          <%= link_to pictures_path do %>
              Галерея
          <% end %>
          <%= link_to questions_path do %>
              Вопросы
          <% end %>
        <% end %>
        <%= link_to @contacts do %>
            Контакты
        <% end %>
      </div>
    </div>
    <div class="wrapper">
      <div id="popup"></div>
    </div>
  </div>
