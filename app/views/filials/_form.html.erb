<%= simple_form_for(@filial) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: 'Название' %>
    <%= f.input :photo, label: 'Изображение' %>
    <%= f.input :shortc, label: "Краткое описание" %>
    <%= f.input :content, as: :ckeditor, label: 'Описание', input_html: { ckeditor: {toolbar: 'Full'} } %>
    <%= f.input :meta_title %>
    <%= f.input :meta_desc %>
    <%= f.input :meta_key %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
