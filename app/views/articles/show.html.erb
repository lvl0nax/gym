<p id="notice"><%= notice %></p>

<div class="title">
  <h1> <%= @article.name %> </h1>
</div>

<div class="descr">
  <%= raw @article.description %>
</div>
<div class="for_clear"></div>
<% if current_user.try(:isAdmin?)   %>
  <p>
    <b>Meta title:</b>
    <%= @article.meta_title %>
  </p>

  <p>
    <b>Meta desc:</b>
    <%= @article.meta_desc %>
  </p>

  <p>
    <b>Meta key:</b>
    <%= @article.meta_key %>
  </p>


  <%= link_to 'Edit', edit_article_path(@article) %> |
  <%= link_to 'Back', articles_path %>

<% end %>
